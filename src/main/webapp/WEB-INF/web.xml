<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>GetEmployeeServlet</servlet-name>
    <servlet-class>com.codecool.servlets.GetEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetEmployeeServlet</servlet-name>
    <url-pattern>/employees/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetEmployeesServlet</servlet-name>
    <servlet-class>com.codecool.servlets.GetEmployeesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
        <servlet-name>GetEmployeesServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
  </servlet-mapping>
</web-app>
